<div class="layout">
  <div class="main">
    <div class="header">
      <div class="header_title">维衣尺码助手</div>
      <div class="header_btn">+ 关注尺码助手</div>
    </div>
    <div class="mbody">
      <div class="text_one margin_02">我的</div>
      <div class="bodydata">
        <div class="bd_block">
          <span class="b_name">身高</span>
          <span id="sg_data" class="b_sele">-- 请选择身高 --</span>
          <span class="b_dwei">cm（厘米）</span>
          <ul id="shengao" class="b_sele_ex">
            <% Height.where("").each do |height| %>
              <li><a href="javascript:void(0)" onclick="Chima.Step.selectHeight($(this));" value="<%= height.id %>"><%= height.value %></a></li>
            <% end %>
          </ul>
        </div>
        <div class="bd_block">
          <span class="b_name">体重</span>
          <span id="tz_data" class="b_sele">-- 请选择体重 --</span>
          <span class="b_dwei">kg（公斤）</span>
          <ul id="tizhong" class="b_sele_ex" style="_margin-left:-215px;">
            <% Weight.where("").each do |weight| %>
              <li><a href="javascript:void(0)" onclick="Chima.Step.selectWeight($(this));" value="<%= weight.id %>"><%= weight.value %></a></li>
            <% end %>
          </ul>
        </div>
        <div class="text_one fontSize_01">请尽可能准确，以尽尺寸为准</div>
      </div>
      <div class="button_one margin_01" onclick="Chima.Step.jumpTo3();">下一步</div>
    </div>
  </div>
</div>

<% h_175 = Height.find_by_value(170) %>
<% w_65  = Weight.find_by_value(65) %>

<%= hidden_field_tag "height_id" , h_175.try(:id) %>
<%= hidden_field_tag 'weight_id' , w_65.try(:id) %>