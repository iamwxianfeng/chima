    <td><%= size.brand_id %></td>
    <td><%= size.gender %></td>
    <td><%= size.where %></td>
    <td><%= size.category_id %></td>
    <td><%= size.model_id %></td>
    <td><%= link_to '显示', size %></td>
    <td><%= link_to '编辑', edit_size_path(size) %></td>
