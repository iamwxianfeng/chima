a.red { color: #f00; }

/* http://fluidmind.org/test/css/tables.html see sources Design 6 */
table {
    border-spacing: 0px;
/*    border-collapse: collapse; */
    background: #E9E9F3;
    border: 0.5em solid #E9E9F3;
}
table th {
    text-align: left;
    font-weight: normal;
    padding: 0.1em 0.5em;
    border: 0px;
    border-bottom: 1px solid #9999AA;
}
table td {
    text-align: right;
    border: 0px;
    border-bottom: 1px solid #9999AA;
    border-left: 1px solid #9999AA;
    padding: 0.1em 0.5em;
}
table thead th {
    text-align: center;
    font-weight: bold;
    color: #6C6C9A;
    border-left: 1px solid #9999AA;
}
table th.Corner {
    text-align: left;
    border-left: 0px;
}
table tr.Odd {
    background: #F6F4E4;
}